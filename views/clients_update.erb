<h1> You are now modifying client: <%= @one_client_name %> </h1>
<ul>
  <li>ID:     <%= @one_client.id %>        </li>
  <li>Name:   <%= @one_client.name %>      </li>
  <li>Email:  <%= @one_client.email %>     </li>
  <li>Phone:  <%= @one_client.phone %>     </li>
  <li>Address:<%= @one_client.address %>   </li>
  <li>City:   <%= @one_client.city %>      </li>
  <li>Zip:    <%= @one_client.zip %>       </li>
  <li>Stylist:<%= @one_client.stylist_id %></li>
</ul>

<!-- Form(s) to contain field = button to update specific field -->
<form action="/clients_update/name" method="post">
  <input type="hidden" id="id" name ="id" value="<%= @one_client.id %>">

  <label for="name">Rename the client:</label>
  <input type="text" id="name" name="name">

  <button name="btn_rename">Rename</button>
</form>

<form action="/clients_update/email" method="post">
  <input type="hidden" id="id" name ="id" value="<%= @one_client.id %>">

  <label for="email">Change Email: </label>
  <input type="text" id="email" name="email">

  <button name="btn_email">Change Email:</button>
</form>

<form action="/clients_update/phone" method="post">
  <input type="hidden" id="id" name ="id" value="<%= @one_client.id %>">

  <label for="phone">Change Phone #:</label>
  <input type="number" id="phone" name="phone">

  <button name="btn_phone">Change Phone #</button>
</form>

<form action="/clients_update/address" method="post">
  <input type="hidden" id="id" name ="id" value="<%= @one_client.id %>">

  <label for="address">Change Address:</label>
  <input type="text" id="address" name="address">

  <button name="btn_address">Change Address</button>
</form>

<form action="/clients_update/city" method="post">
  <input type="hidden" id="id" name ="id" value="<%= @one_client.id %>">

  <label for="city">Change City</label>
  <input type="text" id="city" name="city">

  <button name="btn_city">Change City</button>
</form>

<form action="/clients_update/zip" method="post">
  <input type="hidden" id="id" name ="id" value="<%= @one_client.id %>">

  <label for="zip">Change Zip code</label>
  <input type="number" id="zip" name="zip">

  <button name="btn_zip">Change Zip code</button>
</form>

<a href="/choose_stylist/<%= @one_client.id%>" style="font-size: 20px;"> Choose a stylist</a>


